<div class="container-wrapper relative">
  <h1>Mes Comp√©titions</h1>
  <div class="menu flex justify-between">
    <%= link_to "Mes ligues", users_dashboard_path(choice: 'my_leagues'), data: { turbolinks: false } %>
    <%= link_to "Mes demandes", users_dashboard_path(choice: 'my_requests'), data: { turbolinks: false } %>
  </div>

  <% if params[:choice] == 'my_leagues' || params[:choice].nil? %>
    <%= render "shared/my_leagues" %>
  <% elsif params[:choice] == 'my_requests' %>
    <%= render "shared/my_requests" %>
  <% end %>

  <button id="dropdownTopButton" data-dropdown-toggle="dropdownTop" data-dropdown-placement="top" class="mr-3 mb-3 md:mb-0 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 absolute bottom-0 right-0" type="button">Nouvelle Ligue <i class="fas fa-plus pl-3"></i></button>

  <!-- Dropdown menu -->
  <div id="dropdownTop" class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 block" data-popper-reference-hidden="" data-popper-escaped="" data-popper-placement="top" style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate3d(65px, 170px, 0px);">
      <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownTopButton">
        <li>
          <%= link_to "Ajouter", new_league_path, class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
        </li>
        <li>
          <%= link_to "Rejoindre", leagues_path, class:"block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
        </li>
      </ul>
  </div>

</div>
