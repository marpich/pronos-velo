<h1><strong>Coureurs engag√©s sur le Tour de France</strong></h1>

<div class="container-wrapper">
  <div class="teams grid grid-cols-4 gap-2">
    <% @riders.each do |team| %>
      <div>
        <p class="text-center"><strong><%= team.first %></strong></p>
        <div class="team-riders">
          <% team.second.each do |rider| %>
            <div class="rider-card text-center">
              <div class="flex">
                <p><strong><%= rider.bib %></strong></p>
                <p class="pl-2"><%= rider.first_name %> <%= rider.last_name %></p>
                <%= image_tag rider.nationality, height: 15, width: 20, crop: :fill, class: "ml-2" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
