<!-- Navbar top -->
<div class="navbar-top sticky top-O">
  <%= link_to root_path do %>
    <%= image_tag "LA FRINGALE.jpg" %>
  <% end %>
  <div class="menu">
    <p>Classement</p>
  </div>
</div>

<div class="league-new">
  <div class="title">
    <h1>Nouveau Peloton</h1>
  </div>

  <!-- Formulaire de crÃ©ation de Peloton -->

  <div class="form-mon-prono">
    <%= simple_form_for(@league) do |f| %>
      <div class="form-select">
        <div class="form-input-league">
          <div class="input-league">
            <%= f.input :name, label: "Nom du Peloton" %>
          </div>
        </div>
        <div class="form-input-league">
          <div class="input-league">
            <%= f.input :logo, label: "Logo", as: :file %>
          </div>
        </div>
      </div>
      <div class="form-button">
        <%= f.submit "AJOUTER", class: "main-button" %>
      </div>
    <% end %>
  </div>
</div>
