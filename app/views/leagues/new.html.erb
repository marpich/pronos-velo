  <h1 class="font-bold text-4xl">Leagues#new</h1>
  <p>Find me in app/views/leagues/new.html.erb</p>

  <div data-controller="popup">
    <%= simple_form_for (@league) do |f| %>
        <%= f.input :name, label: "Nom de ta Ligue", input_html: { data: {target: "popup.peloton"} } %>
